// Stats container
.jumbotron#main_stats
  // Title
  h4 #{__('run_statistics')}
  
  // Divider Bar
  hr.my-2

  // Step Number
  p 
    .lead(style='font-size:0.75em;') #{__('step_number')}: 
    span#step_number 
    span &nbsp;#{__('steps')}

  // Time Elapsed
    p 
      .lead(style='font-size:0.75em') #{__('time_elapsed')}: 
      span#time_elapsed 

  // Shortest Path
  p 
    .lead(style='font-size:0.75em') #{__('shortest_path')}: 
    span#current_path 
    span &nbsp;u

  // Longest Path
    p 
      .lead(style='font-size:0.75em') #{__('longest_path')}: 
      span#longest_path 
      span &nbsp;u
  
  // Memory Usage
  p 
    .lead(style='font-size:0.75em') #{__('ram_usage')}: 
    span#ram_usage 
    span &nbsp;#{__('nodes')}
  
  // Processor Usage
    p 
      .lead(style='font-size:0.75em') #{__('processor_usage')}: 
      span#processor_usage 
      span &nbsp;#{__('nodes_per_second')}